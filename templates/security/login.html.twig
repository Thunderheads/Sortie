{% extends 'baseLogin.html.twig' %}

{% block login %}
<form method="post">
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 data-aos="zoom-in">Connectez-vous</h1>
    <label for="inputEmail">Email</label>
    <input type="text" name="email" id="inputEMail" class="form-control" placeholder="Email" required>


    <label class="" for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="row" data-aos="fade-up" data-aos-delay="200">
        <label>
            <input  type="checkbox" name="_remember_me"/>
            Se souvenir de moi
        </label>
    </div>

    <div class="row col-12">
        <button data-aos="fade-up" data-aos-delay="200" class="btn-get-started scrollto" type="submit">
            Se connecter
        </button>
    </div>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</form>
{% endblock %}
